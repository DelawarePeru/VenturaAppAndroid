<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    android:paddingTop="10sp"
    android:gravity="center"
    android:background="@color/white"
    android:layout_gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvTituloPersonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Cambiar Contraseña"
        android:textColor="@color/plomo"
        android:textSize="22sp"

        android:layout_marginBottom="20dp"/>



    <LinearLayout
        android:id="@+id/llCabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center"

        android:layout_marginTop="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:paddingHorizontal="8dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="@color/marcaHeader"
            android:text="Ingrese su nueva contraseña"/>

        <EditText
            android:id="@+id/etNuevaContrasenia"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tvCampania"
            android:layout_marginEnd="5dp"
            android:inputType="textPassword"
            android:background="@drawable/edtx_personal_list"
            android:paddingStart="13sp"
            android:textColor="@color/marcaHeader"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>
    <RelativeLayout
    android:id="@+id/rlButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
        android:gravity="center"
        android:layout_below="@+id/llCabecera"
    android:layout_marginBottom="30dp">
    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:textSize="13sp"
        android:textStyle="bold"
        android:background="@drawable/btn_sincro_disable"
        android:textColor="@color/white"
        />
</RelativeLayout>





    <ProgressBar
        android:id="@+id/pgbLaborRealizada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>