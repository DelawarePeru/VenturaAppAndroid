<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#FFFFFF"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true">

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivUserMenu"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:src="@drawable/logo_isotipoo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="5sp">

                <TextView
                    android:id="@+id/etNombreUsuarioMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="5dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="Velasquez Perez Manuel"
                    tools:text="Velasquez Perez Manuel" />

                <TextView
                    android:id="@+id/etCargoUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/celesteVentura"
                    android:text="B1H_VSAGRO / ICA"
                    tools:text="B1H_VSAGRO / ICA" />

            </LinearLayout>

        </TableRow>
    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tlOpcionesMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout1"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/trDatosMaestros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_top_menu"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/ivInspeccionesPendientes"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_dat" />

            <TextView
                android:id="@+id/etInspeccionesPendientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="Datos Maestros"
                tools:ignore="RtlSymmetry" />
            <LinearLayout
                android:id="@+id/llDatosMaestros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:visibility="gone"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/celesteVentura"
                    android:paddingLeft="20dp"
                    android:text="Personal"

                    />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/trPreparacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom_menu"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/ivInspeccionesRealizadas"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_prep" />

            <TextView
                android:id="@+id/etInspeccionesRealizadas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:text="Preparación"

                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/trProduccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom_menu"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/ivObservacionesAsignadas"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_prod" />

            <TextView

                android:id="@+id/etObservacionesAsignadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:layout_marginLeft="20dp"
                android:text="Producción"

                />
            <LinearLayout
                android:id="@+id/llProduccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:visibility="visible"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/tvLabor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:paddingTop="10dp"
                    android:textColor="@color/celesteVentura"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:text="Labores culturales"

                    />
                <TextView
                    android:id="@+id/tvFitosanitario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/celesteVentura"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:text="Consumo fitosanitario"
                    android:visibility="gone"


                    />
                <TextView
                    android:id="@+id/tvFertilizantes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/celesteVentura"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:text="Consumo de fertilizantes"
                    android:visibility="gone"


                    />
                <TextView
                    android:id="@+id/tvMaquinarias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/celesteVentura"
                    android:paddingLeft="20dp"
                    android:text="Labores de maquinaria"
                    android:visibility="gone"

                    />
            </LinearLayout>

        </RelativeLayout>

    </TableLayout>


