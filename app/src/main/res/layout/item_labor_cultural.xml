<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="15dp">
    <LinearLayout android:orientation="horizontal" android:id="@+id/rlDetalle" android:background="@drawable/edtx_personal_list" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/llItem" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="3">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/celesteVentura" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Código PEP: "/>
                <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/celesteVentura" android:id="@+id/tvCodigo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="01"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="14sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mes del último registro - "/>
                <TextView android:textSize="14sp" android:textStyle="bold" android:id="@+id/tvUltimoRegistro" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Enero 2021"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="14sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Campaña - "/>
                <TextView android:textSize="14sp" android:textStyle="bold" android:id="@+id/tvCampaña" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Campaña1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:id="@+id/TextJornales" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cantidad de jornales - "/>
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold" android:id="@+id/tvJornales" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="25"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>