<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    android:paddingTop="10sp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvTituloPersonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:text="PRE - LISTADO DE PEPS"
        android:layout_marginLeft="52sp"
        android:layout_marginRight="52sp"
        android:textColor="@color/celesteVentura"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTituloPersonal"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:text="CON LABORES CULTURALES"
        android:layout_marginLeft="52sp"
        android:layout_marginRight="52sp"
        android:textColor="@color/celesteVentura"
        android:textSize="20sp" />


    <LinearLayout
        android:id="@+id/rlBuscador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitulo"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/splCampaniasVigentes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/top_shadow_gradient"
            style="@style/SpinnerTheme"
            android:paddingStart="8dp"
            android:paddingEnd="4dp"/>
        <EditText
            android:id="@+id/etBuscador"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/etEmail"
            android:layout_marginTop="10sp"
            android:background="@drawable/edtx_personal_list"
            android:drawablePadding="8dp"
            android:hint="Buscar"
            android:inputType="text"
            android:maxLines="1"
            android:layout_weight="1"
            android:visibility="gone"
            android:paddingStart="13sp"
            android:textAllCaps="false"
            android:textColorHint="@color/marcaHeader"
            android:textStyle="bold"
            android:textSize="13sp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tvSeleccione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:layout_below="@+id/rlBuscador"
        android:text="Seleccione"
        android:textColor="@color/celesteVentura"
        android:textSize="15sp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLaborCultural"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvSeleccione"
        android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>



    <ProgressBar
        android:id="@+id/pgbLaborRealizada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>