<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlLaborDetalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    android:paddingTop="10sp"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/rlCabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_cabecera"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:paddingRight="20dp"
        android:paddingBottom="25dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCodigoPEP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Código PEP"
            android:textColor="@color/marcaHeader"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/etCodigoPEP"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tvCodigoPEP"
            android:layout_marginEnd="5dp"
            android:background="@drawable/edtx_personal_list"
            android:enabled="false"
            android:paddingStart="13sp"
            android:textColor="@color/marcaHeader"
            android:textSize="13sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvCampania"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCodigoPEP"
            android:layout_weight="1"
            android:text="Campaña"
            android:textColor="@color/marcaHeader"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/etCampania"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tvCampania"
            android:layout_marginEnd="5dp"
            android:enabled="false"
            android:background="@drawable/edtx_personal_list"
            android:paddingStart="13sp"
            android:textColor="@color/marcaHeader"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTipoCampania"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCampania"
            android:layout_weight="1"
            android:text="Tipo de Campaña"
            android:textColor="@color/marcaHeader"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/etTipoCampania"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tvCampania"
            android:layout_marginEnd="5dp"
            android:enabled="false"
            android:background="@drawable/edtx_personal_list"
            android:paddingStart="13sp"
            android:textColor="@color/marcaHeader"
            android:textSize="13sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvCultivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCampania"
            android:layout_weight="1"
            android:text="Cultivo"
            android:textColor="@color/marcaHeader"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/etCultivo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tvCultivo"
            android:layout_marginEnd="5dp"
            android:background="@drawable/edtx_personal_list"
            android:paddingStart="13sp"
            android:enabled="false"
            android:textColor="@color/marcaHeader"
            android:textSize="13sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCultivo"
            android:layout_weight="1"
            android:text="Fecha"
            android:textColor="@color/marcaHeader"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tvFecha"
            android:layout_marginEnd="5dp"
            android:background="@drawable/edtx_personal_list"
            android:paddingStart="13sp"
            android:enabled="false"
            android:textColor="@color/marcaHeader"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEtapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etFecha"
            android:layout_weight="1"
            android:text="Etapa de producción"
            android:textColor="@color/marcaHeader"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/etEtapa"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tvEtapa"
            android:layout_marginEnd="5dp"
            android:background="@drawable/edtx_personal_list"
            android:paddingStart="13sp"
            android:enabled="false"
            android:textColor="@color/marcaHeader"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCabecera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:layout_marginTop="0dp"
        >
        <TextView
            android:id="@+id/tvInformacionPEP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:paddingHorizontal="8dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/celesteVentura"
            android:text="Información PEP"/>
        <ImageView
            android:id="@+id/ivExpand"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tvInformacionPEP"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:src="@drawable/ic_up"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llPersonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlCabecera"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTituloDetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textStyle="bold"
                android:text="Datos del personal"
                android:textColor="@color/celesteVentura"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/ivPersonalAdd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/ic_add"
                android:textColor="@android:color/black" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_weight="1"
        android:layout_gravity="right">
        <ImageView
            android:id="@+id/ivSincronizacion"
            android:layout_width="32dp"
            android:layout_marginRight="20dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ic_synchronize"
            android:layout_gravity="right"
            android:visibility="invisible"
            android:foregroundGravity="right"
            android:textColor="@android:color/black" />
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_below="@+id/llPersonal"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Labor de campo"
            android:layout_weight="6"
            android:textColor="@color/celesteVentura"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jornales"
            android:layout_weight="1"
            android:textColor="@color/celesteVentura"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hras Extras"
            android:layout_weight="1"
            android:textColor="@color/celesteVentura"
            android:textSize="12sp"/>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/tbLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edtx_personal_list_disabled"
           >


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlBuscador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llTable"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textStyle="bold"
            android:text="Buscar por código o nombre"
            android:textColor="@color/marcaHeader"
            android:textSize="12sp"/>
        <EditText
            android:id="@+id/etBuscador"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/etEmail"
            android:background="@drawable/edtx_personal_list"
            android:drawablePadding="8dp"
            android:hint="Buscar"
            android:inputType="text"
            android:maxLines="1"
            android:layout_weight="1"
            android:paddingStart="13sp"
            android:textAllCaps="false"
            android:textColorHint="@color/marcaHeader"
            android:textStyle="bold"
            android:textSize="13sp"/>

            </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLaborCultural"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlBuscador"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>





    <ProgressBar
        android:id="@+id/pgbLaborRealizada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>